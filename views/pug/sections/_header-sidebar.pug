-
	var rd_navbar_data_ajuster = {
	"data-sm-stick-up-offset": "1px",
	"data-md-stick-up-offset": "79px",
	"data-lg-stick-up-offset": "1px",
	"data-layout":             "rd-navbar-fixed",
	"data-sm-layout":          "rd-navbar-fixed",
	"data-md-layout":          'rd-navbar-sidebar',
	"data-md-device-layout":   'rd-navbar-sidebar',
	"data-lg-device-layout":   'rd-navbar-sidebar',
	"data-lg-layout":          'rd-navbar-sidebar',
	"data-sm-stick-up":        'true',
	"data-md-stick-up":        'true',
	"data-lg-stick-up":        'true' };

header.page-header
	// RD Navbar
	.rd-navbar-wrap
		nav.rd-navbar&attributes( rd_navbar_data_ajuster )
			.rd-navbar-outer
				.rd-navbar-inner

					// RD Navbar Panel
					.rd-navbar-cell.rd-navbar-panel
						// RD Navbar Toggle
						button.rd-navbar-toggle(data-rd-navbar-toggle='.rd-navbar-nav'): span.toggle-icon
						// RD Navbar Brand
						a.rd-navbar-brand( href='./' )
							+png(logoDefault, "brand-normal")
							+png(logoInverse, "brand-mini")

					// RD Navbar Nav
					.rd-navbar-cell.rd-navbar-menu-wrap
						// RD Navbar Top Panel
						button.collapse-toggle( data-rd-navbar-toggle='.rd-navbar-top-panel' )
							span.toggle-icon
						.outer-1.rd-navbar-top-panel
							ul.navbar-inline-list
								li.rd-navbar-info
									.icon.mdi.mdi-login
									span
										a.link(href="#") Login
										=" "
										span |
										=" "
										a.link(href="#") Registration
								li.rd-navbar-info
									.icon.mdi.mdi-email-outline
									a.link(href="mailto:#") info@demolink.org
								li.rd-navbar-info
									.icon.mdi.mdi-phone
									a.link(href="tel:#") 1-800-1234-567

						// RD Navbar Sidebar
						.rd-sidebar-outer
							// RD Navbar Nav
							.rd-navbar-nav-wrap
								include ../_navigation

							.rd-navbar-panel-right
								// Search toggle
								button.search-toggle( data-rd-navbar-toggle='.rd-navbar-search' )
									span.toggle-icon

								// Search
								.rd-navbar-search
									form.rd-search(action="search-results.html" data-search-live="rd-search-results-live" method="GET")
										.form-wrap
											label.form-label(for="rd-navbar-search-form-input" class="form-label") Type and hit enter...
											input(class="rd-navbar-search-form-input form-input" id="rd-navbar-search-form-input" type="text" name="s" autocomplete="off")
											button.button-submit.fa.fa-search(type="submit")
											#rd-search-results-live.rd-search-results-live

					// RD Navbar Panel Right
					.rd-navbar-cell
						// RD Navbar Sidebar Toggle
						button.sidebar-toggle( data-custom-toggle='.rd-sidebar-outer, .rd-navbar')
							span.toggle-icon